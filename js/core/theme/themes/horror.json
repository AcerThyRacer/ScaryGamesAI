{
    "id": "horror",
    "name": "Psychological Horror",
    "description": "A chilling psychological horror theme that preys on primal fears and existential dread.",
    
    // UI Theme Settings (extends existing theme system)
    "ui": {
        "themeClass": "theme-horror",
        "colors": {
            "primary": "#0a0a0f",
            "secondary": "#1a1a2e",
            "accent": "#cc1122",
            "textPrimary": "#e0e0e0",
            "textSecondary": "#a0a0a0",
            "textMuted": "#666666",
            "borderDark": "rgba(204, 17, 34, 0.3)",
            "borderGlow": "rgba(204, 17, 34, 0.2)"
        },
        "fonts": {
            "main": "'Cormorant Garamond', serif",
            "heading": "'Cormorant Garamond', serif",
            "monospace": "'Source Code Pro', monospace"
        }
    },
    
    // Writing Style Settings
    "writing": {
        "tone": "ominous, unsettling, existential",
        "vocabulary": {
            "positive": ["whisper", "echo", "shadow", "veil", "hush", "lurk", "creep", "fester", "decay", "rot", "void", "abyss", "hollow", "shudder", "tremble"],
            "negative": ["bright", "cheerful", "happy", "joyful", "sunny", "warm", "cozy", "comfortable", "safe", "secure"],
            "intensifiers": ["terribly", "horribly", "awfully", "dreadfully", "ghastly", "hideously", "monstrously", "unnaturally"],
            "descriptors": ["blood-curdling", "bone-chilling", "soul-crushing", "mind-numbing", "heart-stopping", "skin-crawling", "gut-wrenching"]
        },
        "sentenceStructure": {
            "minWords": 8,
            "maxWords": 20,
            "complexity": 0.7,
            "ellipsisProbability": 0.3,
            "fragmentProbability": 0.2
        },
        "scareTechniques": {
            "suddenSilence": 0.1,
            "unreliableNarrator": 0.3,
            "existentialDread": 0.4,
            "bodyHorror": 0.2,
            "jumpScareSetup": 0.3
        }
    },
    
