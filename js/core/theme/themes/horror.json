            "The darkness welcomes you...",
            "Something watches from the shadows.",
            "Your presence disturbs the silence.",
            "The air grows colder. Can you feel it?",
            "Do you hear that? Or is it just in your head?"
        ],
        "farewells": [
            "The shadows will remember you.",
            "Don't turn your back on the dark.",
            "Sleep well... if you can.",
            "The whispers will follow you home.",
            "Until next time... if there is a next time."
        ],
        "loadingMessages": [
            "The walls breathe...",
            "Something moves in the corner of your eye.",
            "The darkness deepens...",
            "Your reflection blinks.",
            "The air grows heavier...",
            "You feel a presence behind you.",
            "The whispers grow louder...",
            "Something is wrong with this place."
        ],
        "gameDescriptions": {
            "template": "A {adjective} experience that will {verb} your {noun}. {scareSetup}",
            "adjectives": ["terrifying", "soul-crushing", "mind-bending", "blood-curdling", "skin-crawling", "gut-wrenching", "heart-stopping"],
            "verbs": ["shatter", "consume", "haunt", "devour", "erode", "unravel", "corrupt"],
            "nouns": ["sanity", "soul", "mind", "memories", "perception of reality", "grip on reality", "very existence"],
            "scareSetups": [
                "Something lurks in the darkness, waiting for the perfect moment to strike.",
                "The walls whisper secrets you were never meant to hear.",
                "You're not alone. You've never been alone.",
                "The deeper you go, the less you recognize yourself.",
                "Every shadow hides a truth too terrible to face."
            ]
        }
