        "sentenceStructure": {
            "minWords": 10,
            "maxWords": 25,
            "complexity": 0.9,
            "ellipsisProbability": 0.5,
            "fragmentProbability": 0.4
        },
        "cosmicTechniques": {
            "incomprehensibility": 0.6,
            "existentialDread": 0.7,
            "madnessInduction": 0.5,
            "ancientKnowledge": 0.6,
            "realityDistortion": 0.4
